  height: 30px;
  background-color: #ddd;
}

#progressThree {
  position: relative;
  width: 100%;
  height: 30px;
  background-color: #ddd;
}

#Progress1 {
  position: absolute;
  width: 5%;
  height: 100%;
  background-color: #4CAF50;
}

#Progress2{
  position: absolute;
  width: 5%;
  height: 100%;
  background-color: #4CAF50;
}

#Progress3 {
  position: absolute;
  width: 5%;
  height: 100%;
  background-color: #4CAF50;
}

